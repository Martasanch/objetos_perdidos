  <main>
    <div class="container text-center">
  
      <div class="row d-flex align-items-center justify-content-center">
         <div class="col-12 d-flex align-items-center justify-content-center">
          <h1 class="font-effect-outline">MODIFICAR OBJETO</h1>
        </div>
       
    
        <div class="row">
             <div class="row formulario">
        <div class="col-12 d-flex justify-content-center align-items-center">
          <form method="post" action="/objeto/modificar" enctype="multipart/form-data">
           <div class="form-group row persona">
              <div class="col-12">
                <p>Persona que le entregó el objeto:</p>
              </div>
              <div class="col-xs-12 col-md-6">

                <input id="nombre" name="nombre" type="text" class="form-control" placeholder="Introduzca el nombre"
                  value="{{nombre}}">
              </div>

              <div class="col-xs-12 col-md-6">
                <input id="telefono" name="telefono" type="number" class="form-control"
                  placeholder="Introduzca el teléfono" value="{{telefono}}">
              </div>
            </div>

            <div class="form-group row">
              <div class="col-12">
                <p>Actualice los datos del objeto:</p>
                <div class="form-group row">
                  <label for="foto" class="col-2 col-form-label">Ref:</label>

                  <div class="col-10">
                  <input id="_id" name="_id" type="text" value="{{_id}}" class="form-control" readonly>
                  </div>
                </div>


                <div class="form-group row">

                  <div class="col-12">
                    <input id="titulo" name="titulo" placeholder="Introduzca una breve descripción" type="text"
                      value="{{titulo}}" class="form-control" required="required">
                  </div>
                </div>
                <div class="form-group row">

                  <div class="col-12">
                    <input id="descripcion" name="descripcion" placeholder="Describa detalladamente el objeto" type="text"
                  value="{{descripcion}}" class="form-control" required="required">

                  </div>
                </div>

                <div class="form-group row">
                  <label for="foto" class="col-2 col-form-label">FOTO</label>
                  <div class="col-10">
                    <input type="file" id="foto" name="foto" value="foto">
                  </div>
                </div>
               
                <div class="form-group row">
                  <div class="col-12">
                    <button style="background-color:green" name="submit" class="btn btn-secondary">Modificar Objeto</button>
                  </div>
                   <div class="col-12">
                    <h4 style="color:green">{{mensaje}}</h3>
                  </div>
                </div>

                </div>
                <div class="col-6">
                <input type="button" id="eliminar" class="btn btn-danger" value="Eliminar Objeto">
                </div>
          </form>
         
           <div class="col-6">
          <input style="background-color:green" type="button" class="btn btn-secondary" value="Volver al inicio" onClick="location.href='/'">
          </div>
        </div>

   
      </div>      
    </div>
  </main>

