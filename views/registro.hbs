<!-- CUERPO DEL EJERCICIO -->
<main>
  <div class="container">
    <div class="row">
      <h1 class="col-12 d-flex justify-content-center align-items-center">REGISTRO DE USUARIOS</h1>
      <div class="row formulario">
        <div class="col-12 d-flex justify-content-center align-items-center">
          <form method="post" action="/usuario/guardar">

    
              <div class="col-12">
                <p>Introduzca los datos:</p>
              </div>
              <div class="col-12">
                <input id="nombre" name="nombre" type="text" class="form-control" placeholder="nombre" 
                 {{!--  required="required" --}}>
                 {{mensajenombre}}
              </div>

              <div class="col-12">
                <input id="email" name="emailMal" type="email" class="form-control"
                  placeholder="correo electrónico"  {{!-- required="required" --}}>
                  {{mensajemail}}
                  {{mensajemailrep}}
              </div>
               <div class="col-12">
                <input id="password" name="password" type="text" class="form-control"
                  placeholder="contraseña"  {{!-- required="required" --}}>
                  {{mensajepass}}
              </div>
            
           
           
           
                <div class="row boton">
                  <div class="col-12 d-flex justify-content-center align-items-center">
                    <button name="submit" class="btn btn-secondary">Registrar</button>
                  </div>
                </div>
                 
              </div>
            </div>

          </form>
        </div>
          <div class="row">
            <div class="col-12 d-flex justify-content-center align-items-center">
              <h4>{{mensaje}}</h4>
            </div>
          </div>
          <div class="row">
        <div class="col-12 d-flex justify-content-center align-items-center">
          <form method="get" action="/usuario/login">
            <button class="btn btn-secondary">Acceder</button>
            </form>
        </div>
        </div>
      </div>
    
    </div>

  </div>
  
</main>